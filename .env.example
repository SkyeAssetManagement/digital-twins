# Digital Twin System Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=digital_twins
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_SSL=false

# PostgreSQL Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# API Keys (Required)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# Embedding Configuration
EMBEDDING_PROVIDER=openai-small
# Options: openai-small, openai-large, local-minilm
EMBEDDING_DIMENSION=1536
# 384 for local-minilm, 1536 for openai-small, 3072 for openai-large

# Logging Configuration
LOG_LEVEL=info
# Options: debug, info, warn, error
LOG_FORMAT=json
# Options: json, simple

# Rate Limiting (Production)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*
# Production: Set to your frontend URL

# File Upload Limits
MAX_FILE_SIZE=10485760
# 10MB in bytes

# Session Configuration
SESSION_SECRET=your-session-secret-here

# External Service Timeouts (ms)
OPENAI_TIMEOUT=30000
ANTHROPIC_TIMEOUT=30000
DEFAULT_TIMEOUT=10000

# Feature Flags
ENABLE_CLAUDE_RESPONSES=true
ENABLE_IMAGE_ANALYSIS=true
ENABLE_CACHING=true
ENABLE_METRICS=false

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
BATCH_SIZE=10
CACHE_SIZE_LIMIT=1000

# Development Settings
DEBUG_SQL=false
DEBUG_EMBEDDINGS=false
MOCK_EXTERNAL_SERVICES=false